<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingEnd="22dp"
        android:paddingStart="22dp"
        android:paddingTop="12dp"
        android:text="@string/settings_function"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/group_system"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_settings_item"
        android:paddingEnd="22dp"
        android:paddingStart="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/switch_system_apps"
            android:text="@string/hide_system_apps"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/switch_system_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_uninstall"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_settings_item"
        android:paddingEnd="22dp"
        android:paddingStart="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:text="@string/hide_uninstall_apps"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/switch_uninstall_appps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_ignore"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_settings_item"
        android:paddingEnd="22dp"
        android:paddingStart="22dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ignore_list"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingEnd="22dp"
        android:paddingStart="22dp"
        android:paddingTop="12dp"
        android:text="@string/settings_more"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/group_share"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_settings_item"
        android:paddingEnd="22dp"
        android:paddingStart="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/share"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_about"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_settings_item"
        android:paddingEnd="22dp"
        android:paddingStart="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/about"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>
